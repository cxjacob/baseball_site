<div class="space-y-6">
  <h1 class="text-2xl font-bold">メンバー一覧</h1>

  <div class="grid md:grid-cols-3 gap-6">
    <% @members.each do |m| %>
      <div class="bg-white p-4 rounded shadow">
        <div class="text-sm text-gray-500 mb-1">#<%= m.number %></div>
        <h2 class="text-lg font-semibold"><%= m.name %></h2>
        <div class="text-sm mt-1">ポジション：<%= jp_position(m.position) %>（<%= m.throws_bats %>）</div>
        <% if m.bio.present? %>
          <p class="text-sm text-gray-700 mt-2"><%= m.bio %></p>
        <% end %>
        <div class="mt-3">
          <%= link_to "詳細を見る", member_path(m), class: "underline" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
