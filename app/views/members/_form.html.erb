<%= form_with(model: member, class: "contents") do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul class="list-disc ml-6">
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": member.errors[:name].none?, "border-red-400 focus:outline-red-600": member.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :number %>
    <%= form.number_field :number, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": member.errors[:number].none?, "border-red-400 focus:outline-red-600": member.errors[:number].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :position %>
    <%= form.text_field :position, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": member.errors[:position].none?, "border-red-400 focus:outline-red-600": member.errors[:position].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :throws_bats %>
    <%= form.text_field :throws_bats, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": member.errors[:throws_bats].none?, "border-red-400 focus:outline-red-600": member.errors[:throws_bats].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :bio %>
    <%= form.text_area :bio, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": member.errors[:bio].none?, "border-red-400 focus:outline-red-600": member.errors[:bio].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :avatar %>
    <%= form.text_field :avatar, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": member.errors[:avatar].none?, "border-red-400 focus:outline-red-600": member.errors[:avatar].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
  <%= form_with(model: member, local: true) do |f| %>
  <!-- 既存の項目 -->
  <div>
    <%= f.label :name, "名前" %>
    <%= f.text_field :name %>
  </div>

  <!-- 写真アップ -->
  <div>
    <%= f.label :photo, "写真" %>
    <%= f.file_field :photo %>
  </div>

  <%= f.submit "保存" %>
  <% end %>

<% end %>
