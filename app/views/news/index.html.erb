<div class="space-y-6">
  <h1 class="text-2xl font-bold">お知らせ</h1>
  <ul class="space-y-3">
    <% @news.each do |n| %>
      <li class="bg-white p-4 rounded shadow">
        <div class="text-sm text-gray-500"><%= n.published_on %></div>
        <h2 class="text-lg font-semibold">
          <%= link_to n.title, n, class: "underline" %>
        </h2>
      </li>
    <% end %>
  </ul>
</div>

