<div class="bg-white p-6 rounded shadow space-y-4">
  <h1 class="text-xl font-semibold">お問い合わせ</h1>

  <%= form_with url: contact_path, method: :post, local: true, class: "space-y-4" do |f| %>
    <div>
      <label class="block text-sm mb-1">用件</label>
      <select name="subject" class="border p-2 rounded w-full">
        <option>対戦</option>
        <option>体験</option>
        <option>その他</option>
      </select>
    </div>
    <div class="grid md:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm mb-1">お名前</label>
        <input type="text" name="name" class="border p-2 rounded w-full">
      </div>
      <div>
        <label class="block text-sm mb-1">メールアドレス</label>
        <input type="email" name="email" class="border p-2 rounded w-full">
      </div>
    </div>
    <div>
      <label class="block text-sm mb-1">本文</label>
      <textarea name="body" rows="6" class="border p-2 rounded w-full"></textarea>
    </div>
    <button class="border px-4 py-2 rounded hover:bg-gray-100">送信する</button>
  <% end %>
</div>
