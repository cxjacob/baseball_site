<div id="<%= dom_id game %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Date:</strong>
    <%= game.date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Opponent:</strong>
    <%= game.opponent %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Place:</strong>
    <%= game.place %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Start time:</strong>
    <%= game.start_time %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Score:</strong>
    <%= game.score %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Note:</strong>
    <%= game.note %>
  </div>
</div>
