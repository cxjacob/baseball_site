<%= form_with(model: game, class: "contents") do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul class="list-disc ml-6">
        <% game.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :date %>
    <%= form.date_field :date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": game.errors[:date].none?, "border-red-400 focus:outline-red-600": game.errors[:date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :opponent %>
    <%= form.text_field :opponent, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": game.errors[:opponent].none?, "border-red-400 focus:outline-red-600": game.errors[:opponent].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :place %>
    <%= form.text_field :place, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": game.errors[:place].none?, "border-red-400 focus:outline-red-600": game.errors[:place].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :start_time %>
    <%= form.text_field :start_time, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": game.errors[:start_time].none?, "border-red-400 focus:outline-red-600": game.errors[:start_time].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :score %>
    <%= form.text_field :score, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": game.errors[:score].none?, "border-red-400 focus:outline-red-600": game.errors[:score].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :note %>
    <%= form.text_area :note, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": game.errors[:note].none?, "border-red-400 focus:outline-red-600": game.errors[:note].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
